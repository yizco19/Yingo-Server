<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cm.zy.mapper.CartMapper">
    <!-- dynamic sql -->
    <select id="list" resultType="cm.zy.pojo.Cart">
        select * from cart
        <where>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
        </where>
    </select>
    <insert id="addItems" parameterType="cm.zy.pojo.CartItem">
        INSERT INTO cart_item (cart_id, product_id, quantity)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.cartId}, #{item.productId}, #{item.quantity})
        </foreach>
    </insert>
</mapper>
